<div class="card login-form text-center">
  <div class="card-body">
    <%= form_with scope: :session, local: true do |f| %>
      <div class="form-group">
        <%= f.text_field :email, class: 'form-control', placeholder: User.human_attribute_name(:email) %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: User.human_attribute_name(:password) %>
      </div>
      <%= f.submit I18n.t('words.login'), class: 'btn btn-primary btn-sm btn-block' %>
    <% end %>
  </div>
</div>
